#!/usr/bin/env bash

set -e

BINDIR=$(dirname "$0")

mkdir -p "$1/bin/"
$BINDIR/../scripts/build_nginx.sh "$1/bin/nginx" "$2"
nginx_version=$($1/bin/nginx -V 2>&1 | head -1 | awk '{ print $NF }')
echo "-----> nginx-buildpack: ${nginx_version} installed"

cp $BINDIR/../config/mime.types $1/mime.types
echo '-----> nginx-buildpack: Default mime.types used'

if [[ ! -f $1/nginx.conf.erb ]]; then
    cp $BINDIR/../config/nginx.conf.erb $1/nginx.conf.erb
	echo '-----> nginx-buildpack: Default config used'
else
	echo '-----> nginx-buildpack: Custom config used'
fi

echo $1

exit 0
