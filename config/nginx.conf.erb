error_log stderr;
pid nginx.pid;
daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 2 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
		gzip on;
        gzip_comp_level 2;
        gzip_min_length 512;

		types_hash_max_size 2048;
		include mime.types;

		#Must read the body in 5 seconds.
		client_body_timeout 5;

		server {
				listen <%= ENV["PORT"] %>;
				server_name _;
				keepalive_timeout 5;
				root <%= ENV.fetch('root', '/app') %>;
				index index.html;
		}
}
